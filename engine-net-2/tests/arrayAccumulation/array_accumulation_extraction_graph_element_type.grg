#using "array_model.gm"

var ::avg:double;
var ::med:double;

rule init
{	
	modify {
		a:A; b:A; c:A; n:N;
		
		eval {
			a.intValue = 1;
			b.intValue = 2;
			c.intValue = 3;
			
			n.val = -1;
			n.aArray = array<A>[a,b,c];
		}
	}
}

rule r
{
	a:A; b:A; c:A; n:N;
	if{ array<A>[a,b,c].extract<intValue>().sum() > n.aArray.extract<intValue>().sum() + n.val; }
	
	modify {
	---
		eval {
			::avg = array<A>[a,b,c].extract<intValue>().avg();
			::med = n.aArray.extract<intValue>().medUnsorted();
		}
	}
}
