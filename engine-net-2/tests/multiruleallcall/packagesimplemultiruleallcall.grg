#using "model.gm"

rule init : (Node)
{
	modify {
		n:Node --> .;
		n --> .;
		n --> visit:Node;

		m:Node --> :M;
		m --> :M;
	
		eval {
			visit.visited = true;
		}
		
		return(n);
	}
}

package Bla
{
	rule r(start:Node)
	{
		start --> n:Node;
		if{ !n.visited; }
		
		modify {
			delete(n);
		}
	}
	
	filter rf<r>(var n:int)
	{
		// no change
	}
	
	sequence seq
	{
		[[r(::n)\rf(42),(m1:array<M>,::m2)=s()\shf(42)\auto]]
