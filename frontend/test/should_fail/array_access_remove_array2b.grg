rule r implements mc
{
	n:Node;
---
	def var i:int;
	def var j:int;

	yield {
		yield i = incident(n).size();
		yield j = 0;
	}
	
	modify {
		delete(n);
	}
} \ orderAscendingBy<i>

match class mc
{
	n:Node;
	def var i:int;
	def var j:int;
} \ orderAscendingBy<i>

rule r_remove_array(ref a:array<int>)
{
	modify {
	---
		eval {
			def ref aout:array<int>;
			aout = a.removeIf{this_:array<match<r>>; m:int -> this_.size() > 0};
		}
	}
}
